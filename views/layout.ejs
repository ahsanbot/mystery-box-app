<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Mystery Box App' %>
    </title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="bg-light text-dark">
    <nav
      class="navbar navbar-expand-lg navbar-dark"
      style="background-color: #6610f2"
    >
      <div class="container-fluid">
        <a class="navbar-brand display-1" href="/">Mystery Box</a>
        <div class="ms-auto">
          <a class="btn btn-outline-light me-2" href="/prompts">All Prompts</a>
          <a class="btn btn-outline-light me-2" href="/prompts/new"
            >Add Prompt</a
          >
          <a class="btn btn-light text-dark" href="/random">Mystery Box</a>
        </div>
      </div>
    </nav>

    <main class="container py-4 fade-in">
      <!-- Success Alert -->
      <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>

      <!-- Error Alert -->
      <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>

      <!-- Page content injected here -->
      <%- body %>
    </main>

    <footer
      class="text-center text-muted py-3 bg-white mt-5 shadow-sm border-top"
    >
      <p class="mb-0">Mystery Box App &copy; 2025</p>
    </footer>
  </body>
</html>
